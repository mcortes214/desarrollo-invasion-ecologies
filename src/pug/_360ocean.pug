    cursor="rayOrigin: mouse; fuse: false"
    raycaster="objects: .clickable"
    )
    //-en a-scene: fog="type: linear; color: #AAC; far: 20"

    a-assets
        img(id="ocean-background" src="img/mar-continental.jpg")
        //-Ana
        img(id="ana-ojo" src="img/ana_ojo.png")
        img(id="ana-ave" src="img/ana_ave.png")
        img(id="ana-tibu" src="img/ana_tibu.png")
        img(id="ana-medusa" src="img/ana_medusa.png")
        img(id="ana-alga" src="img/ana_alga.png")
        img(id="ana-cotorra" src="img/ana_cotorra.png")
        img(id="ana-alga-chiquito" src="img/ana_alga-reves.png")
        img(id="ana-ave-chiquito" src="img/ana_ave-reves.png")
        //-Mariela
        //- img(id="mariela-loro-2" src="img/mariela_loro2.png")
        img(id="mariela-lorita" src="img/mariela_lorita.png")
        img(id="mariela-pluma" src="img/mariela_pluma.png")
        img(id="circulo-amarillo" src="img/circulo-amarillo.png")
        img(id="circulo-verde-chico" src="img/circulo-verde-chico.png")
    
        img(id="gabriela-red" src="img/gabriela_red.png")
        img(id="gabriela-botella" src="img/gabriela_botella.png")
        img(id="gabriela-plastiaglomerados" src="img/gabriela_plastiaglomerados.png")
        img(id="gabriela-bolsa" src="img/gabriela_bolsa.png")

        img(id="circulo-violeta" src="img/circulo-violeta.png")
        img(id="circulo-rojo" src="img/circulo-rojo.png")


    a-camera(look-controls="enabled: true; reverseMouseDrag: true; magicWindowTrackingEnabled: false"
        wasd-controls="enabled: false" fov="60" position="0 0 0")

    //- a-sky(material="src: #ocean-background; fog:false")
    a-sky(material="src: #ocean-background")

    //- a-light(type="point" intensity="1" distance="50" decay="3" position="0 0 0")


    //- Círculos Gabi -- PILOTO DE NUEVO SISTEMA DE MODALES
    -
        let imagenesGabi = [
            {
                id: 'gabriela-red',
                aspectRatio: 3.1316,
                direction: 'left',
            },
            {
                id: 'gabriela-botella',
                aspectRatio: 2.495,
                direction: 'right',
            },
            {
                id: 'gabriela-plastiaglomerados',
                aspectRatio: 0.6943,
                direction: 'right',
            },
            {
                id: 'gabriela-bolsa',
                aspectRatio: 0.988,
                direction: 'right',
            },
        ];
    - for (let i=0; i < 4; i++)
        +partials_new-sea-figure({
            classes: ['icono-gabriela'],
            image: {
                src: `#${imagenesGabi[i].id}`,
                aspectRatio: `${imagenesGabi[i].aspectRatio}`
                },
            contentLoader: {
                link: `contents/gabriela-0${i+1}.html`,
                modalName: `modal-gabriela-0${i+1}`,
            },
            wandererAnimation: { direction: imagenesGabi[i].direction }
        })

    //- Test 3D
    +partials_new-sea-figure({
        classes: ['icono-gabriela'],
        image: { src: '#circulo-rojo' },
        contentLoader: {
            link: `contents/gabriela-05.html`,
            modalName: `modal-gabriela-05`,
            script: '/js/scripts/testScene.js',
        },
        wandererAnimation: { direction: 'left' }
    })


