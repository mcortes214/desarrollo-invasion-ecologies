mixin templates_main(classes, block)
    //-"block" siempre como último argumento
    doctype html
    - const classNames = classes.join(' ');
    html(lang="en" class=classNames)
        head
            meta(charset="UTF-8")
            meta(http-equiv="X-UA-Compatible", content="IE=edge")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            link(rel="stylesheet", href="https://use.typekit.net/pvh0wef.css")
            link(rel="stylesheet" href="css/styles.css")
            - if(classes.includes("aframe"))
                script(src="https://aframe.io/releases/1.3.0/aframe.min.js")
            script(async src="https://unpkg.com/es-module-shims@1.3.6/dist/es-module-shims.js")
            script(type="importmap").
                {
                    "imports": {
                    "three": "/js/lib/three.module.js"
                    }
                }

            title Invasion Ecologies
        body
            - if(block)
                block
            - if(classes.includes("home"))
                script(src="js/wanderers.js")
            //- Small default libraries
            script(type="text/javascript" src="js/contentLoader.js")
            script(type="text/javascript" src="js/moduleManager.js")
            script(type="text/javascript" src="js/stateComponents.js")
            script(type="text/javascript" src="js/eventManager.js")
            script(type="text/javascript" src="js/modal.js")
            script(type="text/javascript" src="js/index.js")

